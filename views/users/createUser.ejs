<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/display.css">
    <link rel="stylesheet" href="/css/signin.css">
    <title>Sign In</title>
</head>

<body class="flex jC-center aI-center">
    <div id="sign-in">
        <h3 class="flex jC-center aI-center">Thêm mới</h3>
        <form class="flex jC-center fD-column" action="/users/create" method="POST">
            <div class="flex jC-sB aI-center base-input">
                <label class="label" for="username">Tên đăng nhập</label>
                <input type="text" name="username" placeholder="username">
            </div>
            <div class="flex jC-sB aI-center base-input">
                <label class="label" for="password">Mật khẩu</label>
                <input type="text" name="password" placeholder="password">
            </div>
            <div class="flex jC-sB aI-center base-input">
                <label for="">Quyền</label>
                <div class="flex jc-sE aI-center" style="width: 100%">
                    <input type="radio" name="role" value="0" checked>
                    <label class="label" for="no-role">no role</label>

                    <input type="radio" name="role" value="1">
                    <label class="label" for="role-user">user</label>
              
                    <input type="radio" name="role" value="2">
                    <label class="label" for="role-admin">admin</label>
                </div>
            </div>
            <% if(hasError==1){ %>
                <span class="flex jC-center aI-center form-error-msg">
                    <%- msg%>
                </span>
                <% } %>
            <div class="flex jc-sE aI-center">
                <button class="base-btn" type="submit">Thêm mới</button>
                <a href="/users/allusers" class="base-btn">Hủy</a>
            </div>
           
        </form>
    </div>
</body>