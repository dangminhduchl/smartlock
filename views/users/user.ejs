<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/users.css">
    <link rel="stylesheet" href="/css/display.css">
    <link rel="stylesheet" href="/css/homepage.css" />


    <title>Document</title>
</head>

<body class="flex aI-center fD-column">
    <nav class="flex jC-fS aI-center nav-bar">
        <img class="flex jC-center" style="height:20px; margin-right: 10px;" src="/image/logo_knock_white.png" alt="">
    
        <a href="/users/controll" class="base-btn nav-btn">điều khiển</a>
     
        <form action="logout" method="POST">
          <button class="base-btn nav-btn" id="logout-btn" type="submit">ĐĂNG XUẤT</button>
        </form>
    </nav>
    <div class="content-wrapper flex fD-column aI-center">
    <h2 style="margin: 10px auto">DANH SÁCH NGƯỜI DÙNG</h2>
    <div id="table-wrapper" class="flex jC-center">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Mật khẩu </th>
                <th>Quyền</th>
                <th></th>
            </tr>
        </thead>
        
        <% user.forEach(u=> { %>
            <tr>
                <td>
                    <%- u.id%>
                </td>
                <td>
                    <%- u.username%>
                </td>
                <td>
                    <%- u.password%>
                </td>
                <td>
                    <% switch(u.role){ 
                        case 1: %>
                            user
                            <% break;
                        case 2: %>
                            admin
                            <% break;
                        default: %>
                            
                            <% break;
                    } %>
                </td>
                <td class="flex aI-center">
                    <a class="base-btn action-btn" href="/users/<%- u.id%>/delete">xóa</button>
                    <a class="base-btn action-btn" href="/users/<%- u.id%>/edit">sửa</a>
                </td>
                <% }) %>
            </tr>
    </table>
    </div>
    <a class="base-btn" id="create-btn" href="/users/create">Thêm mới</a>
   </div>
   
</body>

</html>